{% use 'form_div_layout.html.twig' %}

{%- block form_row -%}
  {%- set row_attr = row_attr|merge({ class: row_attr.class|default(row_class|default('mt-4')) }) -%}
  {{- parent() -}}
{%- endblock form_row -%}

{%- block form_label -%}
  {%- set label_attr = label_attr|merge({ class: label_attr.class|default(label_class|default('block')) }) -%}
  {{- parent() -}}
{%- endblock form_label -%}

{%- block widget_attributes -%}
  {%- set attr = attr|merge({ class: attr.class|default(widget_class|default('mt-2 w-full input input-bordered')) }) -%}
  {{- parent() -}}
{%- endblock widget_attributes -%}

{%- block button_attributes -%}
  {%- set attr = attr|merge({ class: attr.class|default(widget_class|default('btn btn-primary'))}) -%}
  {{- parent() -}}
{%- endblock button_attributes -%}

{%- block button_row -%}
  {% set row_attr = row_attr|merge({ class: row_attr.class|default(row_class|default('mt-4')) }) %}
  {{- parent() -}}
{%- endblock button_row -%}

{%- block form_errors -%}
  {%- if errors|length > 0 -%}
    <ul class="my-2 alert alert-error">
      {%- for error in errors -%}
        <li>{{ error.message }}</li>
      {%- endfor -%}
    </ul>
  {%- endif -%}
{%- endblock form_errors -%}
