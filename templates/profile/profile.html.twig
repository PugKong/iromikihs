{% extends 'app.html.twig' %}

{% block title %}Profile{% endblock %}

{% block content %}
  <twig:PageHeader>Profile</twig:PageHeader>

  <div class="columns-2 mt-4">
    {% if app.user.sync.linked %}
      <div class="bg-base-200 rounded-box shadow-lg shadow-base-300 p-5 break-inside-avoid">
        <h2 class="text-2xl font-bold">Account</h2>
        <span class="account-info">Shikimori account id is {{ app.user.sync.accountId }}</span>
      </div>
    {% endif %}
    <div class="change-password bg-base-200 rounded-box shadow-lg shadow-base-300 p-5 break-inside-avoid">
      <h2 class="text-2xl font-bold">Change password</h2>
      {{ form(changePasswordForm) }}
    </div>
  </div>
{% endblock %}
