<form method="post" action="{{ this.action }}" {{ attributes }}>
  <input
    type="hidden"
    name="{{ constant('App\\Controller\\Controller::COMMON_CSRF_TOKEN_FIELD') }}"
    value="{{ csrf_token(constant('App\\Controller\\Controller::COMMON_CSRF_TOKEN_ID')) }}"
  />
  <button type="submit">{% block content %}{% endblock %}</button>
</form>
