{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
  <main class="flex items-center justify-center min-h-screen">
    <div class="bg-base-200 rounded-box shadow-lg shadow-base-300 mb-5 p-5">
      <h1 class="text-2xl font-bold">Login to your account</h1>

      <form action="{{ path('app_login') }}" method="post" data-turbo="false">
        <div class="mt-4">
          <label for="username" class="block">Username</label>
          <input type="text" name="_username" class="mt-2 input input-bordered" id="username"
                 value="{{ last_username }}" />
        </div>

        <div class="mt-4">
          <label for="password" class="block">Password</label>
          <input type="password" name="_password" class="mt-2 input input-bordered" id="password" />
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <div class="mt-4">
          <label class="label cursor-pointer">
            <span class="label-text">Remember me</span>
            <input type="checkbox" name="_remember_me" class="checkbox" checked />
          </label>
        </div>

        {% if error %}
          <div class="mt-4 alert alert-error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <div class="mt-4">
          <input type="submit" class="w-full btn btn-primary" value="Login" />
        </div>
      </form>
    </div>
  </main>
{% endblock %}
